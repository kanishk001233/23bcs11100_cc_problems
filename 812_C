#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main()
{
    long long n, S;
    cin >> n >> S;

    vector<long long> a(n);

    for(long long i = 0; i < n; i++)
    {
        cin >> a[i];
    }

    long long low = 0;
    long long high = n;
    long long ans_k = 0;
    long long ans_cost = 0;

    while(low <= high)
    {
        long long k = (low + high) / 2;

        vector<long long> b(n);

        for(long long i = 0; i < n; i++)
        {
            b[i] = a[i] + (i + 1) * k;
        }

        sort(b.begin(), b.end());

        long long sum = 0;

        for(long long i = 0; i < k; i++)
        {
            sum = sum + b[i];
        }

        if(sum <= S)
        {
            ans_k = k;
            ans_cost = sum;
            low = k + 1;
        }
        else
        {
            high = k - 1;
        }
    }

    cout << ans_k << " " << ans_cost;

    return 0;
}
